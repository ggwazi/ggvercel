{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dashboard Chat Request",
  "type": "object",
  "required": ["messages"],
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "assistant", "system"]
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "model": {
      "type": "string",
      "default": "openai/gpt-5-nano",
      "examples": [
        "openai/gpt-5",
        "openai/gpt-5-nano",
        "anthropic/claude-sonnet-4.5",
        "xai/grok-4"
      ]
    },
    "stream": {
      "type": "boolean",
      "default": false
    }
  }
}
